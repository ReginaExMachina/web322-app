<div class = "row">
    <div class = "col-md-12">
        <div class = "table-responsive">
            <table class = "table">
                <thead>
                    <tr>
                        <th>Department Number</th>
                        <th>Department Name</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each departments}}
                        <tr>
                            <td><a href="/department/{{departmentId}}">{{departmentName}}</a></td>
                            <td><a href="/employees?department={{departmentId}}"> {{departmentName}} </a> </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
            <h2>
                <a href="/departments/add" class="btn btn-default pull-right">Add New Department</a>
            </h2>
        </div>
    </div>
</div>